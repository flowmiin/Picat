<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Picat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/picat_blue</item>
        <item name="colorPrimaryVariant">@color/picat_light_blue</item>
        <item name="colorOnPrimary">@color/picat_font_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/picat_blue</item>
        <item name="colorSecondaryVariant">@color/picat_light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <!-- 애니메이션 사용 설정 -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.Picat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Picat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Picat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--  기본 alert 테마  -->
    <style name="BasicDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="ThemeOverlay.Picat.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>