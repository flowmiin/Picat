<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/alert_background">

    <TextView
        android:id="@+id/exit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 나가기"
        android:textSize="@dimen/picat_text_size_small"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/picat_font_color"
        android:includeFontPadding="false"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방을 나가면 사진이 모두 삭제됩니다"
        android:textSize="@dimen/picat_text_size_small"
        android:textAlignment="center"
        android:ems="14"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/picat_font_color"
        android:includeFontPadding="false"
        android:layout_marginTop="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/warning_text">

        <Button
            android:id="@+id/exit_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:text="취소"
            android:textColor="@color/picat_font_color"
            android:textSize="@dimen/picat_text_size_small" />

        <Button
            android:id="@+id/exit_check_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:text="확인"
            android:textColor="@color/picat_font_color"
            android:textSize="@dimen/picat_text_size_small" />

    </LinearLayout>

</LinearLayout>