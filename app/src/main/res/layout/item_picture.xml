<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/picture_frame_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    >

    <ImageView
        android:id="@+id/imv"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@color/picat_light_blue"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:foreground="@drawable/picture_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/is_selected_imagebutton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/unselected_icn"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:padding="1dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/zoom_imagebutton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/zoom_icn"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:padding="1dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>